style.
  body {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 85%;
  }
  .flex-column {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .flex-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .backdrop {
    height: 100%;
    width: 100%;
    background-color: rgb(229, 229, 229);
  }
  .letter__content {
    justify-content:flex-start;
    width: 50%;
    padding: 20px;
    /* height: 50%; */
    background-color: rgb(212, 249, 183);
  }
  .letter__content > * {
    padding: 15px;
  }
  .letter__line-container {
    width: 80%;
    background-color: aliceblue;
  }
  .letter__text-line {
    font-size: 20px;
  }
  .letter__message {
    background-color: rgba(111, 111, 111, 0.3);
    padding: 15px;
  }
  .left {
    width: 40%;
  }
  .right {
    width: 55%;
  }
  .letter__title {
    margin: 20px 0 20px 0;
    font-size: 30px;
  }

  .footer {
    height: 10%;
    background-color: rgba(212, 212, 212, 0.3);
    padding: 8px;
  }
  .footer-text {
    color: grey;
    font-size: 18px;
  }
